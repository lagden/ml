@lost flexbox flex
@lost gutter 20px

.detail
	lost-center 800px 20px no-flex
	box-sizing border-box
	position relative

.detail__row
	lost-center 100%
	margin-bottom 20px

.detail__col
	lost-column 1/1
	+above('m')
		lost-column 1/2

.detail__col-full
	lost-column 1/1

.detail__img
	background-color: cor.img
	> img
		margin 0 auto
		display block
		width 100%
		height 100%
		object-fit contain

.detail__price
	margin: 1em 0
	font-size: 2em
	color: cor.red

.ch-form-row
	> label
		position: absolute
		left: 0px
		top: calc(50% - 8px)
		line-height: 1em
		color: cor.gray
		pointer-events none
		width auto
		padding 0
		& ~ select
			appearance: none
			background-color: transparent
			background-image: url('data:image/svg+xml;utf8,%3Csvg%20version%3D%221.1%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20xmlns%3Axlink%3D%22http%3A%2F%2Fwww.w3.org%2F1999%2Fxlink%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%3E%3Cpath%20fill%3D%22' + cor.gray + '%22%20d%3D%22M7.406%207.828l4.594%204.594%204.594-4.594%201.406%201.406-6%206-6-6z%22%3E%3C%2Fpath%3E%3C%2Fsvg%3E');
			background-repeat: no-repeat
			background-position: 100% center
			background-size: 24px
			border: none
			box-sizing: border-box
			border-bottom: 1px solid cor.gray
			border-radius: 0
			color: cor.black
			display block
			font-size: 1.1em
			font-weight: 300
			margin: 0
			outline: none
			padding: 1em 24px 1em 80px
			width: 100%
			white-space: pre

.ch-form-actions
	margin 1em 0

.ch-form-hint
	margin 0.5em 0
